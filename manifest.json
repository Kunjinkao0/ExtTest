{
    "manifest_version": 3,
    "name": "Cookie Tab Extension",
    "version": "1.0",
    "permissions": [
        "tabs",
        "cookies"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}